[% # Provide a title to root/lib/site/header -%]
[% META title = 'Exam scores' -%]

<table>
<tr><th>Class<th>Name<th>ID<th>Exams:[% FOREACH exam IN exams %]
    <th>[% exam.name.substr(4) %][% END %]
<th>Total Score<th>Grade</tr>
  <tr>
    <td>[% league %]</td>
    <td>[% player %]</td>
    <td>[% id %]</td>
    <td>
[% FOREACH exam IN exams -%]
    <td><a href=
"[% c.uri_for('raw/') _ league _ '/' _ id _ '/' _ player _ '/' _ exam.name %]">[% exam.grade %]</a>
[% END -%]
    <td>[% total %]</td>
    <td>[% percent %]</td>
  </tr>
</table>

